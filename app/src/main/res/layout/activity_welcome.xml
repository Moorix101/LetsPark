<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/header_gradient_green_rounded"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center_horizontal">

            <!-- Logo/Icon -->
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:cardCornerRadius="60dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitCenter"
                    android:padding="16dp"
                    android:contentDescription="@string/app_name"/>
            </androidx.cardview.widget.CardView>

            <!-- App Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="#FFFFFF"
                android:textSize="42sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:letterSpacing="0.05"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_subtitle"
                android:textColor="#E0F2FE"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_marginBottom="32dp"/>

            <!-- Welcome Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/welcome_title"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/welcome_description"
                        android:textSize="14sp"
                        android:textColor="#6B7280"
                        android:textAlignment="center"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="24dp"/>

                    <!-- Get Started Button -->
                    <Button
                        android:id="@+id/btnGetStarted"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="@string/btn_get_started"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:backgroundTint="@color/primary_green"
                        app:cornerRadius="16dp"
                        app:icon="@android:drawable/ic_menu_send"
                        app:iconGravity="end"
                        app:iconTint="#FFFFFF"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Team Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_developed_by"
                android:textColor="#E0F2FE"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="16dp"/>

            <!-- Team Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Team Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="24dp"
                            android:background="@color/primary_green"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/project_team"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#1F2937"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ‘¥"
                            android:textSize="24sp"/>
                    </LinearLayout>

                    <!-- Team Members -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:divider="@drawable/divider_horizontal"
                        android:showDividers="middle">

                        <!-- Member 1 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="?attr/selectableItemBackground">

                            <androidx.cardview.widget.CardView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                app:cardCornerRadius="24dp"
                                app:cardElevation="2dp"
                                app:cardBackgroundColor="#10B981">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="AE"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="#FFFFFF"
                                    android:gravity="center"/>
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/member1_name"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#1F2937"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/member1_role"
                                    android:textSize="12sp"
                                    android:textColor="#6B7280"
                                    android:layout_marginTop="2dp"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ’»"
                                android:textSize="24sp"/>
                        </LinearLayout>

                        <!-- Member 2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="?attr/selectableItemBackground">

                            <androidx.cardview.widget.CardView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                app:cardCornerRadius="24dp"
                                app:cardElevation="2dp"
                                app:cardBackgroundColor="#3B82F6">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="AA"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="#FFFFFF"
                                    android:gravity="center"/>
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/member2_name"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#1F2937"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/member2_role"
                                    android:textSize="12sp"
                                    android:textColor="#6B7280"
                                    android:layout_marginTop="2dp"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸŽ¨"
                                android:textSize="24sp"/>
                        </LinearLayout>

                        <!-- Member 3 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="?attr/selectableItemBackground">

                            <androidx.cardview.widget.CardView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                app:cardCornerRadius="24dp"
                                app:cardElevation="2dp"
                                app:cardBackgroundColor="#F59E0B">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="HK"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="#FFFFFF"
                                    android:gravity="center"/>
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/member3_name"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#1F2937"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/member3_role"
                                    android:textSize="12sp"
                                    android:textColor="#6B7280"
                                    android:layout_marginTop="2dp"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="âš¡"
                            android:textSize="24sp"/>
                    </LinearLayout>

                </LinearLayout>

                <!-- Project Info Footer -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#F9FAFB"
                    android:padding="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/university_name"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#374151"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/project_year"
                        android:textSize="11sp"
                        android:textColor="#6B7280"
                        android:layout_marginTop="4dp"
                        android:textAlignment="center"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Footer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_version"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:alpha="0.6"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnLanguage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/circle_bg"
            android:src="@drawable/language"
            android:scaleType="fitCenter"
            android:padding="12dp"
            android:contentDescription="@string/language_selection"
            android:elevation="10dp"/>

    </RelativeLayout>
</ScrollView>